datasource db {
  provider = "mysql"
  url      = "mysql://root:1234@localhost:3308/kfc"
}

generator client {
  provider = "prisma-client-js"
}

model Role {
  id          Int       @id @default(autoincrement())
  roleName    String
  roleDesc    String
  createdBy   String
  createdAt   DateTime? @default(now()) @map("CREATION DATE") @db.Timestamp(0)
  employees   Employee[] @relation("RoleEmployee") // Specify the relation here
}

model Employee {
  id             Int       @id @default(autoincrement())
  firstName      String
  lastName       String
  dob            DateTime
  email          String    @unique
  phoneNo        String
  location       String
  username       String    @unique
  password       String
  roleId         Int
  createdBy      String
  createdAt      DateTime? @default(now()) @map("CREATION DATE") @db.Timestamp(0)
  lastModifiedAt DateTime  @updatedAt

  role           Role      @relation("RoleEmployee", fields: [roleId], references: [id])
}